{
  "name": "go-rgba-color-picker",
  "displayName": "Go Color Picker",
  "description": "Show an interactive color panel for color.RGBA{...} in Go files",
  "version": "1.0.0",
  "publisher": "Zafkii",
  "author": "Zafkii",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [],
    "grammars": [],
    "themes": [],
    "colorDecorators": true
  },
  "files": [
    "media",
    "icon.png",
    "out",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=out/extension.js --platform=node --target=node18 --external:vscode"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zafkii/GoRGBAColorPickerExtension.git"
  },
  "license": "MIT"
}
